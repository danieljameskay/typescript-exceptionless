{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5"
  },
  "bundles": {
    "exceptionless-nodespec": {
      "files": [
        "../node_modules/@types/mocha/index.d.ts",
        "../node_modules/@types/chai/index.d.ts",
        "../node_modules/@types/node/index.d.ts",
        "../node_modules/@types/stack-trace/index.d.ts",

        "exceptionless.node.ts",

