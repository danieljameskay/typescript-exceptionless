        "**/*-nodespec.ts"
      ]
    },
    "exceptionless-browserspec": {
      "files": [
        "../node_modules/@types/mocha/index.d.ts",
        "../node_modules/@types/chai/index.d.ts",

        "exceptionless.ts",

        "**/*-spec.ts",
        "**/*-browserspec.ts"
      ]
    }
  }
